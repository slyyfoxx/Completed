<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Welcome to Travel Agency</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Travel Agency</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">

        <% if (user) { %>
          <!-- Visible to all logged-in users -->
          <li class="nav-item">
              <a class="nav-link" href="/packages"><i class="fas fa-suitcase me-1"></i> Packages</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/destinations"><i class="fas fa-map-marked-alt me-1"></i> Destinations</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/customers"><i class="fas fa-users me-1"></i> Customers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/bookings"><i class="fas fa-calendar-check me-1"></i> Bookings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/payments"><i class="fas fa-credit-card me-1"></i> Payments</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/reviews"><i class="fas fa-star me-1"></i> Reviews</a>
            </li>


          <!-- Logout link for all logged in users -->
          <li class="nav-item">
              <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
            </li>

        <% } else { %>
          <!-- For guests -->
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }

        .navbar {
            background-color: #003580;
            color: white;
            padding: 15px 25px;
            display: flex;
            align-items: center;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-right: 20px;
            font-weight: bold;
        }

        .navbar .right {
            margin-left: auto;
        }

        .container {
            padding: 30px;
        }

        h1 {
            color: #003580;
            margin-bottom: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 10px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button, .btn {
            background-color: #0071c2;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

        button:hover, .btn:hover {
            background-color: #005fa3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #e7eff6;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .actions a {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Page Content -->
    <div class="container">
        <h1>Customer Management</h1>

        <form action="/customers/search" method="POST">
            <input type="text" name="keyword" placeholder="Search by name or email">
            <button type="submit">Search</button>
            <a href="/customers/add" class="btn">Add New Customer</a>
        </form>

        <table>
            <tr>
                <th>ID</th><th>Name</th><th>Email</th><th>Phone</th><th>Action</th>
            </tr>
            <% customers.forEach(function(cust) { %>
                <tr>
                    <td><%= cust.id %></td>
                    <td><%= cust.name %></td>
                    <td><%= cust.email %></td>
                    <td><%= cust.phone %></td>
                    <td class="actions">
                        <a href="/customers/edit/<%= cust.id %>" class="btn">Edit</a>
                        <a href="/customers/delete/<%= cust.id %>" class="btn" onclick="return confirm('Confirm delete?')">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>

</body>
</html>
