    <h1 class="mb-4">Edit Payment</h1>

    <form action="/payments/edit/<%= payment.id %>" method="POST">
        <div class="mb-3">
            <label for="booking_id" class="form-label">Booking ID</label>
            <input type="number" class="form-control" id="booking_id" name="booking_id" 
                value="<%= payment.booking_id %>" required>
        </div>
        <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" step="0.01" class="form-control" id="amount" name="amount" 
                value="<%= payment.amount %>" required>
        </div>
        <div class="mb-3">
            <label for="payment_date" class="form-label">Payment Date</label>
            <input type="date" class="form-control" id="payment_date" name="payment_date" 
                value="<%= payment.payment_date %>" required>
        </div>
        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status" required>
                <option value="Completed" <%= payment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                <option value="Pending" <%= payment.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="Failed" <%= payment.status === 'Failed' ? 'selected' : '' %>>Failed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update Payment</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
    </form>

