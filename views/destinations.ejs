  <!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Welcome to Travel Agency</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Travel Agency</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">

        <% if (user) { %>
          <!-- Visible to all logged-in users -->
          <li class="nav-item">
              <a class="nav-link" href="/packages"><i class="fas fa-suitcase me-1"></i> Packages</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/destinations"><i class="fas fa-map-marked-alt me-1"></i> Destinations</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/customers"><i class="fas fa-users me-1"></i> Customers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/bookings"><i class="fas fa-calendar-check me-1"></i> Bookings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/payments"><i class="fas fa-credit-card me-1"></i> Payments</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/reviews"><i class="fas fa-star me-1"></i> Reviews</a>
            </li>


          <!-- Logout link for all logged in users -->
          <li class="nav-item">
              <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
            </li>

        <% } else { %>
          <!-- For guests -->
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>


</head>
<body>
<!-- Card Display -->


<div class="container mt-4">
  <h1>Destinations</h1>

  <% if (user && user.role === 'admin') { %>
    <div class="mb-3 text-end">
      <a href="/list" class="btn btn-success me-2">Manage Destination</a>
      <a href="/addDestination" class="btn btn-success">Add New Destination</a>
    </div>
  <% } %>
<form class="row mb-4" method="GET" action="/destinations">
  <div class="col-md-5">
    <input type="text" name="search" class="form-control" placeholder="Search by city or country" value="<%= typeof search !== 'undefined' ? search : '' %>">
  </div>
  <div class="col-md-2">
    <button type="submit" class="btn btn-primary w-100">Search</button>
  </div>
</form>
  <div class="row">
    <% if (destinations && destinations.length > 0) { %>
      <% destinations.forEach(function(destination) { %>
        <div class="col-md-4 mb-4 d-flex">
          <div class="card shadow-sm flex-fill d-flex flex-column">
            <img src="/images/<%= destination.image %>" class="card-img-top" alt="Image of <%= destination.city %>" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= destination.country %> - <%= destination.city %></h5>
              <p class="card-text"><strong>Attractions:</strong> <%= destination.attractions %></p>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No destinations available at the moment.</p>
    <% } %>
  </div>
</div>

    <footer>Â© 2025 Travel App</footer>
</body>
</html>


